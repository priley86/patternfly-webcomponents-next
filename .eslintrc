{
  "rules": {
    "prettier/prettier": ["error", { "semi": false, "singleQuote": true }]
  },
  "extends": ["standard", "prettier"],
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true
  },
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "globals": {
    "c3": true
  }
}
